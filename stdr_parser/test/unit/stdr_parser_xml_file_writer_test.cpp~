#include <gtest/gtest.h>
#include "stdr_parser/stdr_xml_file_writer.h"


namespace stdr_parser
{

/**
 * @class XmlParserTest
 * @brief Basic Test Fixture for testing XmlParser
 */
class XmlFileWriterTest : public ::testing::Test
{
 protected:
  XmlFileWriterTest()
  {
  }

  template <class T>
  static void createMessage(T* msg, std::string*  values);




};


template <>
void XmlFileWriterTest::createMessage<stdr_msgs::Noise>
    (stdr_msgs::Noise* msg,std::string*    values)
{
  msg->noise = (values[0]=="1");
           
  msg->noiseMean = atoi(values[1].c_str());
  msg->noiseStd =   atoi(values[2].c_str());
}

template <>
void XmlFileWriterTest::createMessage<stdr_msgs::Noise>
    (stdr_msgs::Noise* msg,std::string*    values)
{
  msg->noise = (values[0]=="1");
           
  msg->noiseMean = atoi(values[1].c_str());
  msg->noiseStd =   atoi(values[2].c_str());
}

TEST_F(XmlFileWriterTest, messageToFile)
{

}

TEST_F(XmlFileWriterTest, messageToXmlElementNoise)
{
  stdr_msgs::Noise* message;
  std::string values[] = {"1","5.4","25.2"};
  XmlFileWriterTest::createMessage(message, values);
}





}
